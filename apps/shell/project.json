{
  "name": "shell",
  "sourceRoot": "apps/shell/src",
  "projectType": "application",

  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx astro dev || true", /* TODO: Remove '|| true' when Astro preview exits with code 0 */
        "cwd": "apps/shell"
      }
    },

    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx astro build || true", /* TODO: Remove '|| true' when Astro preview exits with code 0 */
        "cwd": "apps/shell"
      },
      "outputs": [
        "{workspaceRoot}/apps/shell/dist"
      ]
    },

    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx astro preview || true", /* TODO: Remove '|| true' when Astro preview exits with code 0 */
        "cwd": "apps/shell"
      }
    }
  }
}
